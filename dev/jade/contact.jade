doctype html
html(lang='en')

	head

		- var name = "Contact - Luke Harrison"
		- var slug = "contact" 
		- var description = "If you have a question or just want to get in touch, email me using the form provided."

		include partials/header

	body(class=slug)

		include ../img/master.svg
		include partials/navigation

		section(class="banner banner--contact") 
				h1(class="header--lrg") Contact
				h2(class="header--sml") If you have any questions or just want to get in touch, #[span(class="nowrap") email me] at #[a(href="mailto:luke@lukeharrison.net" class="nowrap") luke@lukeharrison.net] or use the form below.
				div(class="container")
					div(class="contact-form med-clear med10 med-offset1 lrg-clear lrg8 lrg-offset2 xxxlrg-clear xxxlrg8 xxxlrg-offset4")
						form(novalidate)
							input(type="text" name="name" placeholder="Your name")
							input(type="email" name="email" placeholder="Your email address") 
							textarea(name="message" placeholder="Your message" value="")
							input(type="submit" name="submit" class="header--sml" value="Send")

			
		include partials/footer
